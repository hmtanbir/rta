<p id="notice"><%= notice %></p>

<h1>Ages</h1>

<table>
  <thead>
    <tr>
      <th>Range</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ages.each do |age| %>
      <tr>
        <td><%= age.range %></td>
        <td><%= link_to 'Show', age %></td>
        <td><%= link_to 'Edit', edit_age_path(age) %></td>
        <td><%= link_to 'Destroy', age, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Age', new_age_path %>
