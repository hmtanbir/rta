<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User Name</th>
      <th>User Email</th>
      <th>Age Range</th>
      <th>Gender</th>
      <th>Profile type</th>
      <th>Year</th>
      <th>Month</th>
      <th>Country</th>
      <th>Disease</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.user.try(:name) %></td>
        <td><%= profile.user.try(:email) %></td>
        <td><%= profile.age.try(:range) %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.profile_type %></td>
        <td><%= profile.year.try(:year) %></td>
        <td><%= profile.month.try(:code) %></td>
        <td><%= profile.country.try(:code) %></td>
        <td><%= profile.disease.try(:name) %></td>

        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

